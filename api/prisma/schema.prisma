generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Cluster {
  id          String   @id @default(uuid())
  name        String
  endpoint    String
  region      String?
  adminToken  String   // Encrypted token
  metricToken String?  // Encrypted, optional; falls back to adminToken
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AppSettings {
  key   String @id
  value String
}
